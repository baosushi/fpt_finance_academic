
@{
    ViewBag.Title = "ImportSubject";
}
<style>
    .my-btn {
        cursor: pointer;
    }
</style>
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.0/css/responsive.dataTables.min.css" type="text/css"/>

<div class="content">
    <div class="container-default animated fadeInRight">
        <div class="panel panel-default">
            <div class="panel-title"> <i class="fa fa-book" style="color:blue"></i>Subject</div>
            <div class="panel-body">
                <div class="row col-md-2">
                    <button type="button" id="upload-btn" class="btn btn-primary"><i class="fa fa-upload"></i>Import Subject</button>
                    <span id="file-name">Nothing has been selected...</span>
                    <input type="file" value="Import Book" class="hidden" id="upload-file" />
                </div>
                <div class="row col-md-2">
                    <button class="btn btn-success" disabled="disabled" id="submit-btn">
                        Submit file
                    </button>
                </div>

                <div class="table-responsive">
                    <table id="subject_table" class="responsive">
                        <thead>
                            <tr>
                                <td>No.</td>
                                <td>Subject Code</td>
                                <td>Subject Name</td>
                                <td>View Subject </td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="modal fade" id="subject_component_modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                            <h4 style="color:white">Subject Component</h4>
                            <button class="close" data-dismiss="modal">
                                <i class="fa fa-times-circle"></i></button></div>
                            <div class="modal-body">

                            </div>
                            <div class="modal-footer">

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#upload-btn").click(function () {
            $("#upload-file").trigger("click");
        });

        $("#upload-file").on("change", function () {
            var filename = this.files[0].name;
            $("#file-name").html(filename);
            if (filename != null) {
                $("#submit-btn").removeAttr("disabled");
            } else {
                $("#submit-btn").attr("disabled", "disabled");
            }
        });

        $("#submit-btn").on("click", function () {
            var form = new FormData();
            for (var i = 0; i < $("#upload-file")[0].files.length; i++) {
                form.append("file" + i, $("#upload-file")[0].files[i]);
            }

            $.ajax({
                type: "post",
                url: "@Url.Action("UploadSubject", "Management")",
                contentType: false,
                processData: false,
                data: form,
                success: function (result) {
                    if (result.success) {
                        toastr.success(result.message);
                        subject_table.ajax.reload();
                    } else {
                        toastr.error(result.message);
                    }
                },
                error: function (xhr, status, p3, p4) {
                    var err = "Error " + " " + status + " " + p3 + " " + p4;
                    toastr.error(err);
                }

            })
        });

        var subject_table = $("#subject_table").DataTable({
            "processing": true,
            "retrieve": true,
            responsive:true,
            "sAjaxSource": '@Url.Action("GetSubject4DataTable")',
            "columnDefs": [
                { "className": "dt-center", "targets": "_all" },
                {
                    "targets": 3,
                    "render": function (data, type, row, meta) {
                        return '<a href="@Url.Action("SubjectDetails")?subjectId='+data+'"><button type="button" class="btn btn-default my-btn"><i class="fa fa-eye"></i></button></a>';
                    }
                },
                {
                    "targets": [0, 1, 2, 3],
                    "sortable": false
                }
            ]

        });

        function show_modal_Subject_Component(subjectId) {
            $.ajax({
                type:"post",
                url: "@Url.Action("")",
                data: JSON.stringify({ subjectId: subjectId }),
                sucess: function (result) {
                    if (result.success) {

                    } else {
                        toastr.error(result.message);
                    }
                }

            })
        }

    });
</script>